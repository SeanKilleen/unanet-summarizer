<h2>Unanet Time Summary</h2>
<table>
  <thead>
    <tr>
      <th colspan="{{ hoursByProjectType.length }}" class="summary-header project-types">Project Types</th>
      <th colspan="3" class="summary-header totals">Totals</th>
      <th colspan="3" class="summary-header tracking">Pay Period Tracking</th>
    </tr>
    <tr>
      {{#each hoursByProjectType}}
      <th class="summary-subheader project-types">{{ projectType }}</th>
      {{/each}}
      <th class="summary-subheader totals">+ Hours</th>
      <th class="summary-subheader totals">Non + Hours</th>
      <th class="summary-subheader totals">Grand Total</th>
      <th class="summary-subheader tracking">+ Hours in Period</th>
      <th class="summary-subheader tracking">Your + Hours</th>
      <th class="summary-subheader tracking">Tracking</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      {{#each hoursByProjectType}}
      <td>{{ total }}</td>
      {{/each}}
      <td>{{ totalPlusHours }}</td>
      <td>{{ totalNonPlusHours }}</td>
      <td>{{ grandTotalHours }}</td>
      <td>{{ plusHoursInPayPeriod }}</td>
      <td>{{ totalPlusHours }}</td>
      {{#if negativeTracking }}
      <td class="negative-tracking">{{ plusHoursTracking }}</td>
      {{else}}
      <td>{{ plusHoursTracking }}</td>
      {{/if}}
    </tr>
  </tbody>
</table>